---
import { worksDetail } from "../../data/detail";
import Layout from "../../layouts/Layout.astro"
export function getStaticPaths() {
  return worksDetail.map(card =>  ({
        params: { id: card.id }
    }))
}
const { id } = Astro.params;
const currentPath = Astro.request.url;
---

<Layout title="Works Detail">
<div class="flex mx-auto container gap-4">
  <div class="img-wrapper flex-1 basis-1/2">
    <img src={`${currentPath}/${worksDetail[id].photo}`} alt={`${currentPath}/${worksDetail[id].title}`} />
  </div>
  <div class="content-wrapper flex-1 basis-1/2">
    <h1 class="text-2xl md:text-4xl mb-5">{`${currentPath}/${worksDetail[id].title}`}</h1>
  <p>{`${currentPath}/${worksDetail[id].description}`}</p>
  <a href={`${currentPath}/${worksDetail[id].url}`}>URL : {`${currentPath}/${worksDetail[id].title}`}</a>
  </div>
</div>
</Layout>
