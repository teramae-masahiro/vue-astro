---
import Layout from "../../layouts/Layout.astro"
import { getBlogsDetail, getBlogs } from '../../libs/microcms';
export async function getStaticPaths() {
  const response = await getBlogs({fields: 'id'});
  return response.contents.map(post => ({
    params: {
      postId: post.id,
    },
  }));
}
const { postId } = Astro.params;
const post = await getBlogsDetail(postId)
---

<Layout title="News Detail | Infinity Node">
<div class="mx-auto container p-6 bg-white">
  <div class="content-wrapper">
    <h1 class="text-xl md:text-2xl mb-5 color-black">{post.title}</h1>
  <div set:html={post.description} />
  </div>
</div>
</Layout>


<style is:global>
  p {
    font-size: 16px;
    margin-bottom: 10px;
  }
  @media (max-width: 768px) {
    p {
      font-size: 13px;
    }
  }
  .note {
    font-size: 12px;
    color: #999;
    margin-bottom: 10px;
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    margin-bottom: 1.5rem;
    border: 1px solid #dee2e6;
    text-align: left;
  }
  th,td {
    padding: 0.75rem;
    vertical-align: top;
    border: 1px solid #dee2e6;
    width: 100%;
    flex-basis: 20%;
  }
  tr {
    display: flex;
    flex-wrap: wrap;
  }
  @media (max-width: 768px) {
    th,td {

      width:100px
    }
  }

</style>
