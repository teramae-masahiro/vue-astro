---
import Layout from "../../layouts/Layout.astro"
import { getBlogsDetail, getBlogs } from '../../libs/microcms';
export async function getStaticPaths() {
  const response = await getBlogs({fields: 'id'});
  return response.contents.map(post => ({
    params: {
      postId: post.id,
    },
  }));
}
const { postId } = Astro.params;
const post = await getBlogsDetail(postId)
---

<Layout title="Works Detail">
<div class="mx-auto container">
  <div class="content-wrapper ">
    <h1 class="text-2xl md:text-4xl mb-5">{post.title}</h1>
  <a href={post.url}>URL : {post.url}</a>
  <p>{post.description}</p>
  </div>
</div>
</Layout>
