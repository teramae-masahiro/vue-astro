	@import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;1,300&display=swap');
	:root {
		--green: #ecfaec;
		--dark-green: #166639;
		--white: #ffffff;
		--black: #000000;
	}

	body {
		background: var(--green);
		display: grid;
		/* background-image: url("../../public/favicon.svg"); */
